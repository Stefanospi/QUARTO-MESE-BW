@model Quarto__Mese_BW.Models.Prodotto

@{
    ViewData["Title"] = "Dettagli";
}

<div class="container">
    <h1 class="text-center border-bottom">Dettagli</h1>
    <div class="row mt-2">
        <div class="col-2">
            <img src="@Model.ImmagineUrl" class="img-fluid rounded-2 h-100" alt="Alternate Text">
        </div>
        <div class="col-10 border border-2">
            <h2 class="modal-title">@Model.Nome</h2>
            <p class="fst-italic">@Model.Descrizione</p>
            <p class="fw-bold">Prezzo: @Model.Prezzo</p>
            <p class="fw-bold">Stock: @Model.Stock</p>
            <p class="fw-bold">Categoria ID: @Model.CategoriaID</p>
            <p class="fw-bold">Categoria: </p>
            <a href="@Url.Action("Index")" class="btn btn-outline-light">Back to List</a>
    </div>
</div>
