@model Quarto__Mese_BW.Models.Prodotto

@{
    ViewData["Title"] = "Dettagli";
}

<h1 class="text-center border-bottom">Dettagli</h1>
<div class="row justify-content-center">
<div class="card" style="width: 18rem;">
    <img src="@Model.ImmagineUrl" class="card-img-top" alt="Alternate Text" style="height: 200px;">
    <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(model => model.Nome)</h5>
        <p class="card-text">@Html.DisplayFor(model => model.Descrizione)</p>
        <p class="card-text">Prezzo: @Html.DisplayFor(model => model.Prezzo)</p>
        <p class="card-text">Stock: @Html.DisplayFor(model => model.Stock)</p>
        <p class="card-text">Categoria ID: @Html.DisplayFor(model => model.CategoriaID)</p>
        <a href="@Url.Action("Index")" class="btn btn-outline-danger">Back to List</a>
    </div>
</div>
</div>
