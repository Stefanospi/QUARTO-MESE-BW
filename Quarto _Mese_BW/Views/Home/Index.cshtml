@model IEnumerable<Quarto__Mese_BW.Models.Prodotto>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row py-3">
        <div class="col text-center">
            <h1>E-Commerce</h1>
            <hr />
        </div>
    </div>

    <div class="row">
        @foreach (var prodotto in Model)
        {
            <div class="col-md-3">
                <div class="card mb-4 shadow-sm">
                    <img src="@Url.Content(prodotto.ImmagineUrl)" class="card-img-top" alt="@prodotto.Nome">
                    <div class="card-body">
                        <h5 class="card-title">@prodotto.Nome</h5>
                        <p class="card-text">Prezzo: @prodotto.Prezzo.ToString("C")</p>
                        <form asp-controller="Home" asp-action="Aggiungi" method="post">
                            <input type="hidden" name="productId" value="@prodotto.ProductID" />
                            <input type="number" name="quantità" value="1" min="1" class="form-control mb-2" />
                            <button type="submit" class="btn btn-primary">Aggiungi al carrello</button>
                        </form>
                        <form asp-controller="Home" asp-action="Dettagli">
                            <input type="hidden" name="id" value="@prodotto.ProductID" />
                            <button class="btn" type="submit">Dettagli</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
