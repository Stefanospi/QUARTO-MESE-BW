@model Quarto__Mese_BW.Models.ProductInputModel

@{
    ViewData["Title"] = "Aggiungi Prodotto";
}

<div class="pt-3">
    <h2>Aggiungi Prodotto</h2>
    <div class="description-div">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group p-3 details-description mb-4">
                <label asp-for="Nome" class="fs-5 fw-light form-custom">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group p-3 details-description my-4">
                <label asp-for="Descrizione" class="fs-5 fw-light form-custom">Descrizione</label>
                <textarea asp-for="Descrizione" class="form-control"></textarea>
                <span asp-validation-for="Descrizione" class="text-danger"></span>
            </div>
            <div class="form-group p-3 details-description my-4">
                <label asp-for="Prezzo" class="fs-5 fw-light form-custom">Prezzo</label>
                <input asp-for="Prezzo" class="form-control" />
                <span asp-validation-for="Prezzo" class="text-danger"></span>
            </div>
            <div class="form-group p-3 details-description my-4">
                <label asp-for="ImmagineFile" class="control-label">Immagine</label>
                <input asp-for="ImmagineFile" type="file" class="form-control-file" />
                <span asp-validation-for="ImmagineFile" class="text-danger"></span>
            </div>
            <div class="form-group p-3 details-description my-4">
                <label asp-for="Stock" class="fs-5 fw-light form-custom">Quantità in magazzino</label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group p-3 details-description my-4">
                <label asp-for="CategoriaID" class="fs-5 fw-light form-custom">Categoria</label>
                <select asp-for="CategoriaID" class="form-control" asp-items="ViewBag.Categorie">
                    <option value="">Seleziona una categoria...</option>
                </select>
                <span asp-validation-for="CategoriaID" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Salva</button>
        </form>
    </div>

 </div>
