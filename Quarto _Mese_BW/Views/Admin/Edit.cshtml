@model Quarto__Mese_BW.Models.ProductInputModel

@{
    ViewData["Title"] = "Modifica Prodotto";
    var categorie = ViewBag.Categorie as IEnumerable<Quarto__Mese_BW.Models.Categoria>;
}

<h2 class="text-white">Modifica Prodotto</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Nome" class="text-white"></label>
        <input asp-for="Nome" class="form-control bg-dark text-white" />
    </div>
    <div class="form-group">
        <label asp-for="Descrizione" class="text-white"></label>
        <textarea asp-for="Descrizione" class="form-control bg-dark text-white"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Prezzo" class="text-white"></label>
        <input asp-for="Prezzo" class="form-control bg-dark text-white" />
    </div>
    <div class="form-group">
        <label asp-for="ImmagineUrl" class="text-white"></label>
        <input asp-for="ImmagineUrl" class="form-control bg-dark text-white" readonly />
    </div>
    <div class="form-group">
        <label asp-for="ImmagineFile" class="text-white"></label>
        <input asp-for="ImmagineFile" type="file" class="form-control-file bg-dark text-white" />
    </div>
    <div class="form-group">
        <label asp-for="Stock" class="text-white"></label>
        <input asp-for="Stock" class="form-control bg-dark text-white" />
    </div>
    <div class="form-group">
        <label asp-for="CategoriaID" class="text-white"></label>
        <select asp-for="CategoriaID" class="form-control bg-dark text-white">
            @foreach (var categoria in categorie)
            {
                <option value="@categoria.CategoriaID">@categoria.NomeCategoria</option>
            }
        </select>
    </div>
    <input type="hidden" asp-for="ProductID" />
    <button type="submit" class="btn btn-primary text-white">Salva</button>
    <a asp-action="Index" class="btn btn-secondary text-white">Annulla</a>
</form>



