@{
    ViewData["Title"] = "Admin Login";
}
<div class="pt-5">
    <h2>Admin Login</h2>
    <form asp-action="Login" method="post" class="login-form">
        <div class="form-group">
            <label for="email" class="fs-5 fw-light">Indirizzo email</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="form-group pt-2">
            <label for="password" class="fs-5 fw-light">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
        </div>
        <button type="submit" class="btn mt-3">Login</button>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger mt-2">@ViewBag.ErrorMessage</div>
        }
    </form>
</div>
